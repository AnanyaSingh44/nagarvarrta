<% layout('layouts/boilerplate.ejs') -%>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <% if (city && city.length > 0) { %>
                    <h1><%= city[0].name %></h1>
                <% } else { %>
                    <h1>City not found</h1>
                <% } %>
            </div>
            <div class="card-body">
                <% if (city && city.length > 0) { %>
                    <h5 class="card-title">State: <%= city[0].state %></h5>
                   
                    <h3>History</h3>
                    <p><strong>War:</strong> <%= city[0].history.war %></p>
                    <p><strong>Art & Heritage:</strong> <%= city[0].history.artH %></p>

                    <h3>Ghosts and Legends</h3>
                    <ul>
                        <% city[0].GnL.forEach((story) => { %>
                            <li><%= story %></li>
                        <% }) %>
                    </ul>

                    <h3>Specialities</h3>
                <% } else { %>
                    <p>City details are not available.</p>
                <% } %>
            </div>
        </div>
    </div>
</body>
